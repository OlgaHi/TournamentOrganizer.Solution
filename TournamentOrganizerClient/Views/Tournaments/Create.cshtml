@{
 Layout = "_Tournament";
}

@model TournamentOrganizerClient.Models.Tournament
<div class="container-fluid">
  <div class="wrapper">
    <div class="neon-wrapper">
      <span class="txt">Tournament </span>
      <span class="gradient"></span>
      <span class="dodge"></span>
    </div>
  </div>
  <div class="nes-inputs form">
    @using (Html.BeginForm())
    {
    @Html.DisplayNameFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.DisplayNameFor(model => model.OrganizedBy)
    @Html.TextBoxFor(model => model.OrganizedBy)
    @Html.DisplayNameFor(model => model.Location)
    @Html.TextBoxFor(model => model.Location)
    @Html.DisplayNameFor(model => model.Time)
    @Html.TextBoxFor(model => model.Time, new {@type="time"})
    @Html.DisplayNameFor(model => model.Category)
    @Html.TextBoxFor(model => model.Category)
    <input type="submit" value="Add" /> 
    }
  </div>
</div>
