@{
  Layout = "_Tournament";
}

@model TournamentOrganizerClient.Models.Tournament

<h2>Delete Tournament</h2>
<hr />
<h4>Are you sure you want to delete this tournament?</h4>

@Html.DisplayFor(model => model.Name):
<p>@Html.DisplayFor(model => model.Name)</p>
      
@using (Html.BeginForm())
  {
    <input type="submit" value="Delete" class="btn btn-danger" />
  }
        

<h3>@Html.ActionLink("Back to Tournament Details", "Details", new {id = Model.TournamentId}) || @Html.ActionLink("Back to Tournaments", "Index")</h3>
